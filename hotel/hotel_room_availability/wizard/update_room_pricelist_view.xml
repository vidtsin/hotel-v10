<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_update_room_pricelist" model="ir.ui.view">
            <field name="name">view.update.room.pricelist</field>
            <field name="model">update.room.pricelist</field>
            <field name="arch" type="xml">
                <form string="Update Room Priccelist">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="room_pricelist_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <field name="room_pricelist_line_ids" nolabel="1">
                            <tree editable="top">
                                <field name="room_pricelist_id" invisible="1"/>
                                <field name="hotel_room_id" required="1" widget="selection"/>
                                <field name="operator"/>
                                <field name="price"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="update_room_price" string="_Apply" type="object" class="btn-primary"/>
                        <button string="_Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_update_room_pricelist" model="ir.actions.act_window">
            <field name="name">Update Room Pricelist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">update.room.pricelist</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
<!--             <field name="view_id" ref="view_update_available_room_qty"/>
 -->            <field name="target">new</field>
        </record>
    </data>
</odoo>
