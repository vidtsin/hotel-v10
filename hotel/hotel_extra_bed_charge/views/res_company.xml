<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit the Res Company Form -->
    <record id="view_res_company_form_inherit1" model="ir.ui.view">
        <field name="name">res.company.form.view.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='adults_details_validation']" position="after">
                <field name="extra_bed_charge_id"/>
            </xpath>
        </field>
    </record>

</odoo>